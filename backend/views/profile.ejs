<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>SuccessPoint - Your Trustable Job Finding App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-[#577BC1]">

  <!-- üîó Top Navigation -->
  <div class="flex justify-between items-center px-4 py-4 sm:px-8">
    <a href="/" class="text-[#3B1C32] font-bold text-lg sm:text-2xl hover:text-blue-800">üè† Home</a>
    <a href="/user/profile/update" class="text-[#3B1C32] font-bold text-lg sm:text-2xl hover:text-blue-800">‚úèÔ∏è Edit</a>
  </div>

  <!-- üë§ Profile Card -->
  <div class="flex justify-center items-center px-4 sm:px-8 py-6">
    <div class="w-full max-w-3xl bg-white rounded-lg shadow-lg p-6 sm:p-8">

      <!-- Header: Photo + Name -->
      <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6">
        <img src="<%= profilePhoto %>" alt="Profile Photo" class="w-24 h-24 rounded-full border-4 border-blue-500 object-cover" />
        <div class="text-center sm:text-left">
          <h1 class="text-2xl font-bold text-[#000957]"><%= fullname %></h1>
          <p class="text-[#4C7B8B] mt-1"><%= role %></p>
        </div>
      </div>

      <!-- üì± Contact Info -->
      <div class="mt-6">
        <h2 class="text-lg font-semibold text-[#EFB036] border-b-2 border-[#0A3981] pb-1">Contact Information</h2>
        <ul class="mt-4 space-y-3">
          <li class="flex justify-between flex-col sm:flex-row bg-blue-50 p-3 rounded-md shadow">
            <span class="font-medium text-gray-700">Email:</span>
            <span class="text-gray-800 break-all"><%= email %></span>
          </li>
          <li class="flex justify-between flex-col sm:flex-row bg-blue-50 p-3 rounded-md shadow">
            <span class="font-medium text-gray-700">Phone:</span>
            <span class="text-gray-800"><%= phone %></span>
          </li>
        </ul>
      </div>

      <!-- üìù Bio -->
      <div class="mt-6">
        <h2 class="text-lg font-semibold text-[#EFB036] border-b-2 border-[#0A3981] pb-1">Bio</h2>
        <p class="mt-4 text-gray-700"><%= bio %></p>
      </div>

      <!-- üß† Skills -->
      <div class="mt-6">
        <h2 class="text-lg font-semibold text-[#EFB036] border-b-2 border-[#0A3981] pb-1">Skills</h2>
        <ul class="mt-4 flex flex-wrap gap-2 sm:gap-3">
          <% skills.forEach(skill => { %>
            <li class="bg-[#001A6E] text-white px-4 py-2 rounded-full text-sm font-medium shadow">
              <%= skill.trim() %>
            </li>
          <% }); %>
        </ul>
      </div>

      <!-- üìÑ Resume -->
      <div class="mt-6">
        <h2 class="text-lg font-semibold text-[#EFB036] border-b-2 border-[#0A3981] pb-1">Resume</h2>
        <% if (resume) { %>
          <a href="<%= resume %>" class="mt-4 inline-block bg-blue-600 text-white px-6 py-2 rounded shadow hover:bg-blue-700 transition">
            Download Resume: <%= resumeOriginalName %>
          </a>
        <% } else { %>
          <p class="mt-4 text-gray-500">No resume uploaded.</p>
        <% } %>
      </div>

    </div>
  </div>
</body>
</html>
