<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %>
</head>
<body>
    <div class="container mx-auto my-6">
      <% if (message) { %>
        <div class="message <%= success ? 'success' : 'error' %>">
            <%= message %>
        </div>
      <% } %>
      <% jobs.forEach((job) => { %>
        <div class="w-[70%] my-4 p-8 bg-blue-900 text-white rounded-lg shadow-lg mx-10">
          <div class="flex justify-between items-center">
              <h2 class="text-2xl text-[#F5ECD5] font-bold mb-2"><%= job.title %></h2>
              <img class="w-10 ml-50" src="../images/placeholder.png">
          </div>
          
          <h3 class="text-lg text-[#EFB036] font-semibold mb-2">Company: <%= job.company.name %></h3>
          <p class="text-sm mb-4"><%= job.description %></p>
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium">Location: <%= job.location %></span>
            <a 
              href="/application/apply/<%= job._id %>" 
              class="bg-[#6EACDA] hover:bg-blue-200 text-[#000957] font-bold py-2 px-4 rounded"
              target="_blank"
            >
              Apply Now
            </a>
          </div>
        </div>
      <% }); %>
    </div>
</body>
</html>
